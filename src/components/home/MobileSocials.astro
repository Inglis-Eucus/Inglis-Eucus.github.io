---
const socials = [
{
    name: 'Blog',
    url: '/blog',
    icon: 'i-uil-book-open',
  }, 
{
    name: 'GitHub',
    url: 'https://github.com/Inglis-Eucus/Inglis-Eucus.github.io',
    icon: 'i-uil-github',
  },
  {
    name: 'Instagram',
    url: 'https://www.instagram.com/mago_astra/',
    icon: 'i-uil-instagram',
  },
];
---

<section class='md:hidden'>
  <h2 class='hidden'>Socials section</h2>
  <ul class='flex justify-between'>
    {
      socials.map((item) => (
        <li class='bg-white px-4 py-2 text-black border-black border-2 rounded card-shadow'>
          <a href={item.url} target='_blank' title={`Go to ${item.name}`}>
            <div class:list={[item.icon, 'p-6']} />
          </a>
        </li>
      ))
    }
  </ul>
</section>
